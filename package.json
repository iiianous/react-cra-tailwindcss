{
	"name": "react-tailwind",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.3.2",
		"@testing-library/user-event": "^7.1.2",
		"autoprefixer": "^9.8.6",
		"chokidar-cli": "^2.1.0",
		"node-sass": "^4.14.1",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^7.1.1",
		"postcss-import": "^12.0.1",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-scripts": "3.4.3",
		"tailwindcss": "^1.6.3"
	},
	"scripts": {
		"build:tailwind": "tailwind build src/tailwindcss/tailwind.css -o src/tailwindcss/tailwind.output.css",
		"watch:tailwind": "chokidar 'src/**/*.css' 'src/**/*.scss' --ignore src/tailwindcss/tailwind.output.css -c 'npm run build:tailwind'",
		"start": "npm-run-all build:tailwind --parallel watch:tailwind start:react",
		"start:react": "react-scripts start",
		"prebuild": "run-s build:tailwind",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
